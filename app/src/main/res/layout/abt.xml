<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user_pc.licet.MainActivity7"
        android:weightSum="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_sample"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/t9" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:text="@string/aboutus"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:textSize="36sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/sample_text_view"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:text="@string/details1"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sample_text_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details2"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:textSize="36sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/sample_text_view2"
            android:layout_width="374dp"
            android:layout_height="638dp"
            android:text="@string/details3"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sample_text_view3"
            android:layout_width="374dp"
            android:layout_height="1512dp"
            android:text="@string/details4"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>