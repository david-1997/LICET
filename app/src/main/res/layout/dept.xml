<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user_pc.licet.MainActivity5">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <Button
            android:id="@+id/it"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:background="@drawable/infot"
            android:layout_row="0"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/cse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_column="0"
            android:background="@drawable/cse"
            android:layout_row="1"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/ece"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_column="0"
            android:background="@drawable/ece"
            android:layout_row="2"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/eee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_column="0"
            android:background="@drawable/eee"
            android:layout_row="3"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/mech"
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/mech"
            android:layout_row="4"
            android:layout_weight="1"
            />
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="@string/z1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_weight="1"
            android:textSize="40dp"
            android:text="@string/z2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="1"
            android:textSize="40dp"
            android:text="@string/z3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_weight="1"
            android:textSize="40dp"
            android:text="@string/z4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_weight="1"
            android:textSize="40dp"
            android:text="@string/z5" />
    </GridLayout>
</LinearLayout>